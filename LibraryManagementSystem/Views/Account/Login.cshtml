@model LibraryManagementSystem.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<style>
    .login-bg {
        min-height: 84vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(120deg, #267871 0%, #136a8a 100%);
        padding: 2rem 0;
    }

    .login-card {
        background: #fff;
        border-radius: 1.1rem;
        box-shadow: 0 4px 44px rgba(30,70,120,0.18);
        padding: 2.5rem 2.2rem 1.6rem 2.2rem;
        width: 100%;
        max-width: 370px;
        animation: fadeIn 0.7s cubic-bezier(0.5,0,0.3,1);
    }
    

    .login-card h2 {
        color: #136a8a;
        font-weight: 700;
        letter-spacing: 0.04em;
        margin-bottom: 1.5rem;
        font-size: 2.05rem;
        text-align: center;
    }

    .login-form-label {
        font-size: 1.01rem;
        color: #136a8a;
        font-weight: 500;
    }

    .login-form-input {
        border-radius: 0.6rem;
        font-size: 1.06rem;
        border: 1px solid #e2e5ec;
        margin-bottom: 0.7rem;
    }

        .login-form-input:focus {
            border-color: #267871;
            box-shadow: 0 0 0 2px #136a8a22;
        }

    .login-form-check {
        margin-bottom: 1.1rem;
    }

    .login-btn {
        width: 100%;
        padding: 0.67em 0;
        font-size: 1.16rem;
        border-radius: 0.6rem;
        border: none;
        background: linear-gradient(90deg, #267871 0%, #136a8a 100%);
        color: #fff;
        font-weight: 600;
        letter-spacing: 0.02em;
        box-shadow: 0 2px 14px #26787117;
        transition: background 0.19s;
    }

        .login-btn:hover {
            background: linear-gradient(90deg, #136a8a 0%, #267871 100%);
        }

    .text-danger {
        font-size: 0.98rem;
        margin-bottom: 0.6rem;
    }
</style>

<div class="login-bg">
    <div class="login-card">
        <h2>
            <i class="bi bi-person-circle" style="font-size:1.7rem; vertical-align:-3px; color:#267871;"></i>
            Login
        </h2>

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="UserName" class="login-form-label"></label>
                <input asp-for="UserName" class="form-control login-form-input" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="login-form-label"></label>
                <input asp-for="Password" class="form-control login-form-input" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group form-check login-form-check">
                <input asp-for="RememberMe" class="form-check-input" id="RememberMe" />
                <label asp-for="RememberMe" class="form-check-label login-form-label" for="RememberMe"></label>
            </div>

            <button type="submit" class="btn login-btn">Login</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
