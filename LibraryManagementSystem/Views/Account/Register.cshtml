@model LibraryManagementSystem.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<style>
    .register-bg {
        min-height: 87vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(120deg, #267871 0%, #136a8a 100%);
        padding: 2rem 0;
    }

    .register-card {
        background: #fff;
        border-radius: 1.1rem;
        box-shadow: 0 4px 44px rgba(30,70,120,0.18);
        padding: 2.6rem 2.2rem 1.5rem 2.2rem;
        width: 100%;
        max-width: 420px;
        animation: fadeIn 0.7s cubic-bezier(0.5,0,0.3,1);
    }
 

    .register-card h2 {
        color: #136a8a;
        font-weight: 700;
        letter-spacing: 0.04em;
        margin-bottom: 1.4rem;
        font-size: 2.1rem;
        text-align: center;
    }

    .register-form-label {
        font-size: 1.03rem;
        color: #136a8a;
        font-weight: 500;
    }

    .register-form-input {
        border-radius: 0.6rem;
        font-size: 1.06rem;
        border: 1px solid #e2e5ec;
        margin-bottom: 0.7rem;
    }

        .register-form-input:focus {
            border-color: #267871;
            box-shadow: 0 0 0 2px #136a8a22;
        }

    .text-danger {
        font-size: 0.98rem;
        margin-bottom: 0.55rem;
    }

    .register-btn {
        width: 100%;
        padding: 0.69em 0;
        font-size: 1.16rem;
        border-radius: 0.6rem;
        border: none;
        background: linear-gradient(90deg, #267871 0%, #136a8a 100%);
        color: #fff;
        font-weight: 600;
        letter-spacing: 0.02em;
        box-shadow: 0 2px 14px #26787118;
        transition: background 0.19s;
        margin-top: 0.2rem;
    }

        .register-btn:hover {
            background: linear-gradient(90deg, #136a8a 0%, #267871 100%);
        }
</style>

<div class="register-bg">
    <div class="register-card">
        <h2>
            <i class="bi bi-person-plus" style="font-size:1.6rem; vertical-align:-3px; color:#267871;"></i>
            Register
        </h2>
        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="FirstName" class="register-form-label"></label>
                <input asp-for="FirstName" class="form-control register-form-input" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="register-form-label"></label>
                <input asp-for="LastName" class="form-control register-form-input" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="register-form-label"></label>
                <input asp-for="Email" class="form-control register-form-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="register-form-label"></label>
                <input asp-for="Password" class="form-control register-form-input" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="register-form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control register-form-input" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn register-btn">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
